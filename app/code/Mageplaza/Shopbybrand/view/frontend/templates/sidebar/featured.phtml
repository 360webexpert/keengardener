$timeId = time();
$featureBrands = $block->getFeaturedBrand();

if (count($featureBrands) > 1) : ?>
    <?= /** @noEscape */ $block->includeCssLib() ?>
    <div class="block block-brand-feature widget">
        <?php if ($block->showTitle()) : ?>
            <div class="block-title">
                <strong id="block-feature-brand-heading" role="heading"
                        aria-level="2"><?= /** @noEscape */ $block->getFeatureTitle() ?></strong>
            </div>
        <?php endif; ?>
        <div class="block-content">
            <div class="owl-carousel owl-theme brand-carousel" id="feature-brand-carousel-<?= $timeId ?>"
                 data-mage-init='{"brandSlider": {}}'>
                <?php foreach ($featureBrands as $brand) : ?>
                    <?php if ($block->getProductQuantity($brand->getOptionId())) : ?>
                        <div class="relate-content item">
                            <a href="<?= /** @noEscape */ $block->helper()->getBrandUrl($brand) ?>">
                                <img class="img-responsive brand-image"
                                     src="<?= /** @noEscape */ $brand->getImage() ? $block->resizeImage($brand, 500)
                                         : $block->helper()->getBrandImageUrl($brand); ?>">
                            </a>
                        </div>
                    <?php endif; ?>
                <?php endforeach; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
