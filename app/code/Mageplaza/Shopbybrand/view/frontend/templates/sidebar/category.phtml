$categories = $block->getCategories();
$count = 0;
?>
<div class="block block-category-brand widget" id="block-category-brand-container">
    <div class="block-title">
        <strong role="heading" aria-level="2" class="block-subtitle"
                id="category-brand-subtitle"><?= /** @noEscape */ $block->getTitle() ?></strong>
    </div>
    <div class="block-content">
        <?php if (count($categories)) : ?>
            <div class="filter-options-content" id='category-brand-menu'>
                <ul>
                    <?php foreach ($categories as $category) : ?>
                        <?php if ($block->getBrandQty($category->getId())) : ?>
                            <?php if ($category) {
                                $count++;
                            }
                            if ($count > $block->getLimit()) {
                                break;
                            }
                            ?>
                            <li>
                                <a href="<?= /** @noEscape */ $block->getCatUrl($category) ?>">
                                    <span><?= /** @noEscape */ $block->showBrandQty() ? $category->getName() . ' (' . $block->getBrandQty($category->getId()) . ')' : $category->getName(); ?></span>
                                </a>
                            </li>
                        <?php endif; ?>
                    <?php endforeach; ?>
                </ul>
            </div>
        <?php else : ?>
            <div class="filter-options-content" id='category-brand-menu'>
                <span><?= /** @noEscape */ __('No categories available.') ?></span>
            </div>
        <?php endif; ?>
    </div>
</div>
