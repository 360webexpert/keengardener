<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="mageplaza_seo_sitemap_footer"
                   ifconfig="seo/html_sitemap/footer">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Sitemap</argument>
                    <argument name="path" xsi:type="string">sitemap/</argument>
                </arguments>
            </block>
            <block class="Mageplaza\Sitemap\Block\Sitemap" name="mageplaza_seo_sitemap" template="Mageplaza_Sitemap::disablelink.phtml"/>
        </referenceBlock>
    </body>
</page>
