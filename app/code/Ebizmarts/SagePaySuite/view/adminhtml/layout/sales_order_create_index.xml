    <body>
        <referenceBlock name="order_create_billing_form">
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">sagepaysuiteform</argument>
                <argument name="template" xsi:type="string">Ebizmarts_SagePaySuite::form/payment-form.phtml</argument>
            </action>
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">sagepaysuitepi</argument>
                <argument name="template" xsi:type="string">Ebizmarts_SagePaySuite::pi/payment-form.phtml</argument>
            </action>
            <action method="setMethodFormTemplate">
                <argument name="method" xsi:type="string">sagepaysuiterepeat</argument>
                <argument name="template" xsi:type="string">Ebizmarts_SagePaySuite::repeat/payment-form.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>

